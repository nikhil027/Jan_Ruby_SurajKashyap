<h2> Add Students </h2>

<%= form_for @student do |f| %>

	<% if @student.errors.any? %>
		<h3> these errors prohibited the form from being saved: </h3>
			<ul>
			<% @student.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
			<% end %>


	<label> Name </label>
	<%= f.text_field :student_name %>  <br/>

	<label> Email</label>
	<%= f.text_field :email%>

	<label> Major </label>
	<%= f.text_field :major %> <br/>
	
<%= f.submit "Submit" %>

	<% end %>